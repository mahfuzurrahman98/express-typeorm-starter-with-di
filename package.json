{
    "name": "intoproject-backend",
    "version": "1.0.0",
    "description": "intoproject backend API",
    "main": "src/index.ts",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
        "build": "tsc",
        "postbuild": "mkdir -p dist/app/templates && cp -r src/app/templates/* dist/app/templates/",
        "start": "node -r module-alias/register dist/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:m": "cd tests/manual && ts-node",
        "seed": "cd src/seeders && ts-node",
        "migration:generate": "node scripts/migration-create.js",
        "migration:run": "npm run typeorm migration:run -- -d scripts/data-source.ts",
        "migration:run:cli": "npm run typeorm migration:run -- -d scripts/data-source.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "handlebars": "^4.7.8",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.3",
        "pg": "^8.13.2",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.8.1",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.20",
        "uuid": "^11.1.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.8.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/ejs": "^3.1.5",
        "@types/express": "^5.0.1",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/module-alias": "^2.0.4",
        "@types/multer": "^1.4.11",
        "@types/node": "^22.16.5",
        "@types/nodemailer": "^6.4.17",
        "@types/uuid": "^10.0.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "_moduleAliases": {
        "@": "dist"
    }
}
